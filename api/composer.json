{
  "name": "grupo-naser/cms-api",
  "description": "PHP API for Grupo Naser CMS",
  "type": "project",
  "require": {
    "php": ">=7.4",
    "ext-json": "*",
    "ext-pdo": "*",
    "vlucas/phpdotenv": "^5.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7",
    "phpmd/phpmd": "^2.13",
    "mockery/mockery": "^1.5",
    "fakerphp/faker": "^1.20"
  },
  "autoload": {
    "psr-4": {
      "App\\": "."
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "../tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html ../tests/coverage",
    "cs": "phpcs",
    "cs-fix": "phpcbf",
    "md": "phpmd . text phpmd.xml --exclude vendor"
  },
  "config": {
    "sort-packages": true
  }
}
